package com.fannie.threads;

class BusinessLogic{
	public void doMyJob(){

		for (int i=0; i<500; i++){
			System.out.println("do my job "+i+" in Thread "+Thread.currentThread().getName()+" priority: "+Thread.currentThread().getPriority());
		}

	}
}
//if there is a main method in the class, then it's a tread
//priority: 1 - min, 5- norm (default), 10 - max
public class TreadEx1 {
	
	
	
	public static void main(String[] args) {
		
		System.out.println("name: "+Thread.currentThread().getName());
		System.out.println("priority: "+Thread.currentThread().getPriority());
		
		new BusinessLogic().doMyJob();
		
		for (int i=0; i<500; i++){
			System.out.println(" I value "+i+" in Thread "+Thread.currentThread().getName()+" priority: "+Thread.currentThread().getPriority());
		}
	}
}
